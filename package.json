{
    "name": "hidl-syntax",
    "displayName": "HIDL-syntax",
    "description": "Syntax highlighting for HAL Interface Definition Language",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "Android",
        "HIDL"
    ],
    "publisher": "yrpark99",
    "icon": "images/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/yrpark99/hidl-syntax.git"
    },
    "contributes": {
        "languages": [
            {
                "id": "hidl",
                "aliases": [
                    "HIDL",
                    "hidl"
                ],
                "extensions": [
                    ".hal"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "hidl",
                "scopeName": "source.hidl",
                "path": "./syntaxes/hidl.tmLanguage.json"
            }
        ]
    }
}